@model Wedstrijd

@{
    ViewData["Title"] = "WijzigWedstrijd";
}

<h2>Wijzig de wedstrijd</h2>

<form asp-action="WijzigWedstrijd">
    <input asp-for="ID" type="hidden" />
    <div class="form-group">
        <label asp-for="Datum">@Html.DisplayNameFor(x => x.Datum)</label>
        <input asp-for="Datum" class="form-control" id="datetimepicker" type="text" />
    </div>
    <br />
    <div class="form-group">
        <label asp-for="TeamThuis.Naam">Thuisteam</label>
        <input asp-for="TeamThuis.Naam" class="form-control" value="@Model.TeamThuis.Naam" disabled/>
        <input asp-for="TeamThuisID" value="@Model.TeamThuisID" type="hidden"/>
    </div>
    <br />
    <div class="form-group">
        <label asp-for="ScoreThuis">Score thuis</label>
        <input asp-for="ScoreThuis" class="form-control" type="number" />
    </div>
    <br />
    <div class="form-group">
        <label asp-for="TeamUit.Naam">Uitteam</label>
        <input asp-for="TeamThuis.Naam" class="form-control" value="@Model.TeamUit.Naam" disabled />
        <input asp-for="TeamUitID" value="@Model.TeamUitID" type="hidden" />
    </div>
    <br />
    <div class="form-group">
        <label asp-for="ScoreUit">Score uit</label>
        <input asp-for="ScoreUit" class="form-control" type="number" />
    </div>
    <input type="submit" value="Wijzig"/>
</form>

<a asp-area="Admin" asp-controller="Wedstrijd" asp-action="Index">Back</a>

<script>jQuery('#datetimepicker').datetimepicker();</script>

