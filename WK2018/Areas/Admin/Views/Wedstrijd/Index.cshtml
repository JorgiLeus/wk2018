@model IEnumerable<Wedstrijd>

@{
    ViewData["Title"] = "Wedstrijden beheren";
}

<h2>Beheren van wedstrijden</h2>

<ul>
    @foreach (Wedstrijd wedstrijd in Model)
    {
        <li><a asp-area="Admin" asp-controller="Wedstrijd" asp-action="WijzigWedstrijd" asp-route-id="@wedstrijd.ID">@wedstrijd.Datum @wedstrijd.TeamThuis.Naam - @wedstrijd.TeamUit.Naam</a></li>
    }
</ul>