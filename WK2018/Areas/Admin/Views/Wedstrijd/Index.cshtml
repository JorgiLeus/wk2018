@model IEnumerable<Wedstrijd>

@{
    ViewData["Title"] = "Wedstrijden beheren";
}

<h2>Beheren van wedstrijden</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                Datum
            </th>
            <th>
                Wedstrijd
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(Wedstrijd wedstrijd in Model)
        {
            String Thuisnaam = wedstrijd.TeamThuis?.Naam ?? "TBD";
            String Uitnaam = wedstrijd.TeamUit?.Naam ?? "TBD";
            <tr>
                <td>@wedstrijd.Datum</td>
                <td><a asp-area="Admin" asp-controller="Wedstrijd" asp-action="WijzigWedstrijd" asp-route-id="@wedstrijd.ID"><i class="far fa-edit">@Thuisnaam - @Uitnaam</i></a></td>
            </tr>
        }
    </tbody>
</table>