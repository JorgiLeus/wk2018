@model IEnumerable<Wedstrijd>

@{
    ViewData["Title"] = "Wedstrijden beheren";
}

<h2>Beheren van wedstrijden</h2>

<ul>
    @foreach (Wedstrijd wedstrijd in Model)
    {
        String Thuisnaam = wedstrijd.TeamThuis?.Naam ?? "TBD";
        String Uitnaam = wedstrijd.TeamUit?.Naam ?? "TBD";
        <li><a asp-area="Admin" asp-controller="Wedstrijd" asp-action="WijzigWedstrijd" asp-route-id="@wedstrijd.ID">@wedstrijd.Datum @Thuisnaam - @Uitnaam</a></li>
    }
</ul>